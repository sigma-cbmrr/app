        // --- GESTÃO DE USUÁRIOS/SELECTS (Corrigida) ---

        async function loadAdminSelects() {
            const userUnitSelect = document.getElementById('new-user-unit');
            const novoLocalUnidadeSelect = document.getElementById('novo-local-unidade');
            const novoLocalPostoSelect = document.getElementById('novo-local-posto');

            [userUnitSelect, novoLocalUnidadeSelect, novoLocalPostoSelect].forEach(select => select.innerHTML = '<option value="">Carregando...</option>');
            
            try {
                const [unitsDoc, postosDoc] = await Promise.all([
                    db.collection(COLECAO_CONFIG).doc('unidades').get(),
                    db.collection(COLECAO_CONFIG).doc('postos').get()
                ]);

                const unidades = unitsDoc.exists ? unitsDoc.data().lista || [] : [];
                const postos = postosDoc.exists ? postosDoc.data().lista || [] : [];
                
                const unitHtml = '<option value="">Selecione...</option>' + unidades.map(u => `<option value="${u}">${u}</option>`).join('');
                userUnitSelect.innerHTML = unitHtml;
                novoLocalUnidadeSelect.innerHTML = unitHtml;

                const postoHtml = '<option value="">Selecione...</option>' + postos.map(p => `<option value="${p}">${p}</option>`).join('');
                novoLocalPostoSelect.innerHTML = postoHtml;
                
                UNIDADES = unidades; 
                POSTOS = postos; 
            } catch(e) { console.error("Erro ao carregar selects admin:", e); }
        }

        async function loadUsers() {
            const tbody = document.getElementById('users-table-body');
            tbody.innerHTML = '<tr><td colspan="5">Carregando...</td></tr>';
            try {
                const snap = await db.collection(COLECAO_USUARIOS).get();
                tbody.innerHTML = '';
                snap.forEach(doc => {
                    const u = doc.data();
                    const tr = document.createElement('tr');
                    tr.innerHTML = `<td>${u.posto} ${u.nome_guerra}</td><td>${u.email || 'N/D'}</td><td><span class="role-badge role-${u.role}">${u.role}</span></td><td>${u.unidade}</td><td><button class="btn-modern-action btn-edit" style="padding:4px 8px; font-size:0.8em;" onclick="abrirModalEdicaoUsuario('${doc.id}')">Editar</button></td>`;
                    tbody.appendChild(tr);
                });
            } catch(e) { console.error("Erro ao carregar usuários:", e); }
        }
        
        async function criarUsuario() {
            const email = document.getElementById('new-user-email').value;
            const guerra = document.getElementById('new-user-guerra').value;
            const posto = document.getElementById('new-user-posto').value;
            const completo = document.getElementById('new-user-completo').value;
            const role = document.getElementById('new-user-role').value;
            const unitName = document.getElementById('new-user-unit').value;

            if(!email || !guerra || !unitName) return alert("Preencha os campos obrigatórios.");
            
            try {
                await db.collection(COLECAO_USUARIOS).add({ 
                    email, 
                    nome_guerra: guerra, 
                    posto, 
                    nome_militar_completo: completo, 
                    role, 
                    unidade: unitName 
                });
                alert("Usuário registrado!");
                loadUsers();
            } catch(e) { 
                alert("Erro ao registrar usuário: " + e.message);
            }
        }

        async function abrirModalEdicaoUsuario(userId) {
            showLoading();
            try {
                const userDoc = await db.collection(COLECAO_USUARIOS).doc(userId).get();
                if (!userDoc.exists) throw new Error("Usuário não encontrado.");
                const userData = userDoc.data();
                
                const unitSelect = document.getElementById('edit-user-unit-select');
                unitSelect.innerHTML = '<option value="">Selecione...</option>';
                
                const unitsSnap = await db.collection(COLECAO_CONFIG).doc('unidades').get();
                const unidades = unitsSnap.data()?.lista || [];
                
                unidades.forEach(u => {
                    const selected = (u === userData.unidade) ? 'selected' : '';
                    unitSelect.innerHTML += `<option value="${u}" ${selected}>${u}</option>`;
                });

                document.getElementById('edit-user-id').value = userId;
                document.getElementById('edit-user-nome-guerra').textContent = userData.nome_guerra;
                document.getElementById('edit-user-posto-grad').value = `${userData.posto} ${userData.quadro || ''}`;
                document.getElementById('edit-user-email-display').value = userData.email || 'N/D';
                document.getElementById('edit-user-role-select').value = userData.role;

                openModal('modal-edicao-usuario');

            } catch(e) {
                alert("Erro ao carregar dados do usuário: " + e.message);
                console.error(e);
            } finally {
                hideLoading();
            }
        }
        
        async function salvarEdicaoUsuario() {
            const userId = document.getElementById('edit-user-id').value;
            const newRole = document.getElementById('edit-user-role-select').value;
            const newUnit = document.getElementById('edit-user-unit-select').value;

            if (!newUnit) return alert("A Unidade é obrigatória.");

            if (!confirm(`Confirmar alteração do Perfil para: ${newRole} e Unidade para: ${newUnit}?`)) return;

            showLoading();
            try {
                await db.collection(COLECAO_USUARIOS).doc(userId).update({
                    role: newRole,
                    unidade: newUnit
                });

                alert("Usuário atualizado com sucesso!");
                closeModal('modal-edicao-usuario');
                loadUsers(); 

            } catch(e) {
                alert("Erro ao salvar: " + e.message);
            } finally {
                hideLoading();
            }
        }

        async function removerUsuario() {
             const userId = document.getElementById('edit-user-id').value;
             const nomeGuerra = document.getElementById('edit-user-nome-guerra').textContent;
             
             if (!confirm(`ATENÇÃO! Você irá remover o registro do usuário ${nomeGuerra}. Isso não apaga o login do Firebase Auth. Continuar?`)) return;

             showLoading();
             try {
                await db.collection(COLECAO_USUARIOS).doc(userId).delete();
                
                alert("Registro do usuário removido. Remova o login do Firebase Auth se necessário.");
                closeModal('modal-edicao-usuario');
                loadUsers(); 

            } catch(e) {
                alert("Erro ao remover: " + e.message);
            } finally {
                hideLoading();
            }
        }


        // --- GESTÃO DE UNIDADES ---

        async function loadUnits() {
            const container = document.getElementById('units-cards-container');
            if(!container) return;
            container.innerHTML = 'Carregando...';
            try {
                const unitsDoc = await db.collection(COLECAO_CONFIG).doc('unidades').get();
                const rotasDoc = await db.collection(COLECAO_CONFIG).doc('rotas').get();
                const unidades = unitsDoc.exists ? (unitsDoc.data().lista || []) : [];
                const rotas = rotasDoc.data() || {};
                
                const listCount = {};
                Object.values(rotas).forEach(r => {
                    listCount[r.unidade] = (listCount[r.unidade] || 0) + 1;
                });

                container.innerHTML = '';
                unidades.forEach(u => {
                    const count = listCount[u] || 0;
                    const card = document.createElement('div');
                    card.className = 'sector-card status-unit';
                    card.innerHTML = `<h3>${u}</h3><div class="card-footer"><strong>Contém:</strong> ${count} Listas</div>`;
                    container.appendChild(card);
                });
                
                UNIDADES = unidades; 
                loadAdminSelects(); 
                
            } catch(e) { container.innerHTML='Erro ao carregar Unidades'; console.error(e); }
        }

        async function criarUnidade() {
            const nome = document.getElementById('new-unit-name').value.trim().toUpperCase();
            if(!nome) return alert("Digite o nome da Unidade.");
            
            try {
                await db.collection(COLECAO_CONFIG).doc('unidades').update({ 
                    lista: firebase.firestore.FieldValue.arrayUnion(nome) 
                });
                alert("Unidade criada!");
                document.getElementById('new-unit-name').value = '';
                loadUnits();
            } catch(e) { alert("Erro ao criar Unidade: " + e.message); }
        }
        
        // --- GESTÃO DE POSTOS ---
        
        async function loadPostos() {
            const container = document.getElementById('postos-cards-container');
            if(!container) return;
            container.innerHTML = 'Carregando...';
            try {
                const postosDoc = await db.collection(COLECAO_CONFIG).doc('postos').get();
                const rotasDoc = await db.collection(COLECAO_CONFIG).doc('rotas').get();
                const postos = postosDoc.exists ? (postosDoc.data().lista || []) : [];
                const rotas = rotasDoc.data() || {};
                
                const listCount = {};
                Object.values(rotas).forEach(r => {
                    listCount[r.posto] = (listCount[r.posto] || 0) + 1;
                });

                container.innerHTML = '';
                postos.sort().forEach(p => {
                    const count = listCount[p] || 0;
                    const card = document.createElement('div');
                    card.className = 'sector-card status-posto';
                    card.innerHTML = `<h3>${p}</h3><div class="card-footer"><strong>Contém:</strong> ${count} Listas</div>`;
                    container.appendChild(card);
                });
                
                POSTOS = postos; 
                loadAdminSelects(); 
            } catch(e) { container.innerHTML='Erro ao carregar Postos'; console.error(e); }
        }

        async function criarPosto() {
            const nome = document.getElementById('new-posto-name').value.trim().toUpperCase();
            if(!nome) return alert("Digite o nome do Posto.");
            
            try {
                await db.collection(COLECAO_CONFIG).doc('postos').update({ 
                    lista: firebase.firestore.FieldValue.arrayUnion(nome) 
                });
                alert("Posto criado!");
                document.getElementById('new-posto-name').value = '';
                loadPostos();
            } catch(e) { alert("Erro ao criar Posto: " + e.message); }
        }

        // --- EDITOR DETALHADO (Lógica complexa) ---

        async function loadListasLocaisAdmin() {
            const ul = document.getElementById('lista-locais-container');
            ul.innerHTML = '<li style="padding:10px; text-align:center;">Carregando Rotas/Listas...</li>';
            
            try {
                const rotasDoc = await db.collection(COLECAO_CONFIG).doc('rotas').get();
                const rotas = rotasDoc.data() || {};
                ul.innerHTML = '';

                Object.entries(rotas).forEach(([id, info]) => {
                    if(info.ativo === false) return;
                    const safeName = info.nome.replace(/'/g, "\\'");
                    const safeId = id.replace(/'/g, "\\'");
                    
                    const li = document.createElement('li');
                    li.className = 'local-item';
                    
                    li.innerHTML = `<div class="local-info"><strong>${info.nome}</strong><span>${info.posto} | Unidade: ${info.unidade||'Geral'}</span></div><button class="btn-modern-action btn-edit" onclick="openEditor('${safeId}', '${safeName}')">Editar</button>`;
                    ul.appendChild(li);
                });

            } catch(e) {
                console.error("Erro ao carregar listas admin:", e);
                ul.innerHTML = '<li style="padding:10px; color:red; text-align:center;">Erro ao carregar listas.</li>';
            }
        }

        async function criarNovoLocal() {
            const posto = document.getElementById('novo-local-posto').value;
            const nome = document.getElementById('novo-local-nome').value.trim().toUpperCase();
            const unidade = document.getElementById('novo-local-unidade').value;
            
            if(!posto || !nome || !unidade) return alert("Preencha Posto, Nome e Unidade.");
            
            const id = `${posto.toLowerCase().replace(/[^a-z0-9]/g, '')}_${nome.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()}`;
            
            try {
                await db.collection(COLECAO_LISTAS).doc(id).set({ 
                    nome: nome, 
                    posto: posto, 
                    list: [], 
                    unidade: unidade, 
                    updatedAt: firebase.firestore.Timestamp.now() 
                });
                
                await db.collection(COLECAO_CONFIG).doc('rotas').set({ 
                    [id]: { nome: nome, posto: posto, unidade: unidade, ativo: true } 
                }, { merge: true });

                alert("Lista Criada! Use o botão Editar para adicionar setores e itens.");
                document.getElementById('novo-local-nome').value = '';
                loadListasLocaisAdmin();

            } catch(e) { alert("Erro ao criar lista: " + e.message); }
        }

