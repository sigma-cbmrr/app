            authDomain: "sigma-cbmrr.firebaseapp.com", 
            projectId: "sigma-cbmrr", 
            storageBucket: "sigma-cbmrr.firebasestorage.app", 
            messagingSenderId: "378026276038", 
            appId: "1:378026276038:web:620dd6ff57501b1a8313c7" 
        };

        if (!firebase.apps.length) firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();

        // ====================================================================================================================
        // VARIÁVEIS GLOBAIS
        // ====================================================================================================================
        let userProfile = null;
        let currentRole = 'operacional';
        let currentUnit = null;
        let currentUserId = null;
        
        let LISTAS_LOCAIS = [];
        let UNIDADES = [];
        let POSTOS = [];
        let currentEditingListId = null;
        let dadosConferencia = [];
        
        const COLECAO_USUARIOS = 'usuarios';
        const COLECAO_LISTAS = 'listas_conferencia';
        const COLECAO_RESULTADOS = 'resultados_conferencias';
        const COLECAO_CONFIG = 'config_geral';
        const COLECAO_PENDENCIAS = 'pendencias'; 

        // ====================================================================================================================
        // FUNÇÕES DE UTILIDADE GERAL (UI, DATE, PDF, ETC)
        // ====================================================================================================================

        function showLoading() { document.getElementById('loading-overlay').style.display = 'flex'; }
        function hideLoading() { document.getElementById('loading-overlay').style.display = 'none'; }
        function openModal(id) { document.getElementById(id).style.display = 'flex'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }
        function sairDoSistema() { auth.signOut().then(() => { window.location.href = "index.html"; }); }
        function formatFirestoreDate(timestamp) {
            if (!timestamp || !timestamp.toDate) return 'N/D';
            const date = timestamp.toDate();
            return date.toLocaleDateString('pt-BR') + ' ' + date.toLocaleTimeString('pt-BR').substring(0, 5);
        }

        function switchView(viewId) {
            document.querySelectorAll('.view-section').forEach(el => el.classList.remove('active-view'));
            document.querySelectorAll('.sidebar a').forEach(el => el.classList.remove('active'));
            document.getElementById(`view-${viewId}`).classList.add('active-view');
            document.getElementById(`link-${viewId}`)?.classList.add('active'); 
            // if (window.innerWidth < 768) closeMenuMobile(); // Assume mobile logic

            // Lógica de inicialização de views
            if(viewId === 'dashboard') { checkRascunho(); initOperacional(); }
            if(viewId === 'usuarios') loadUsers();
            if(viewId === 'unidades') loadUnits();
            if(viewId === 'postos') loadPostos();
            if(viewId === 'listas') loadListasLocaisAdmin();
            if(viewId === 'editor') document.getElementById('main-admin-content').style.display = 'block'; 
        }

        async function reimprimirPDF(resultadoId) {
             const doc = await db.collection(COLECAO_RESULTADOS).doc(resultadoId).get();
             if (!doc.exists) return alert("Relatório não encontrado!");
             const data = doc.data();
             const dataTimestamp = data.timestamp ? data.timestamp.toDate() : new Date();

             if (typeof window.jsPDF === 'undefined') {
                 return alert("Erro: jspdf não carregado. O PDF não pode ser gerado.");
             }
             const pdf = new window.jsPDF();
             pdf.text(`RELATÓRIO SIGMA - ${data.local}`, 15, 20);
             pdf.text(`Conferente: ${data.conferente}`, 15, 30);
             pdf.text(`Data: ${formatFirestoreDate(data.timestamp)}`, 15, 40);
             pdf.autoTable({ startY: 50, head: [['Item', 'Quantidade', 'Status']], body: data.itensRelatorio.map(i => [i.nome, i.quantidade, i.status]), theme: 'striped' });
             pdf.save(`Relatorio_${data.local}_${dataTimestamp.toISOString().split('T')[0]}.pdf`);
        }

        // ====================================================================================================================
        // CONTROLE DE AUTENTICAÇÃO E PERFIL
        // ====================================================================================================================
        
        function controlarVisibilidade(role) {
            document.getElementById('view-gestao-modulos').style.display = 'none';
            document.getElementById('link-global-history').style.display = 'none';
            document.querySelectorAll('.restricted-admin-only').forEach(el => el.style.display = 'none');
            
            if (role === 'gestor' || role === 'admin') {
                document.getElementById('view-gestao-modulos').style.display = 'block';
                document.getElementById('link-global-history').style.display = 'block';
                // initGestao(userProfile.unidade); // Descomentar quando transferir a função
            }

            if (role === 'admin') {
                document.querySelectorAll('.restricted-admin-only').forEach(el => el.style.display = 'block');
                initAdmin(); 
            }
            initOperacional(); 
        }

        function loadUserProfile(user) {
            db.collection(COLECAO_USUARIOS).where('email', '==', user.email).limit(1).get()
                .then(snap => {
                    if (snap.empty) {
                        alert("Usuário não cadastrado no SIGMA. Contate o Administrador.");
                        auth.signOut();
                        return;
                    }
                    const doc = snap.docs[0];
                    userProfile = { ...doc.data(), id: doc.id };
                    currentRole = userProfile.role || 'operacional';
                    currentUnit = userProfile.unidade;
                    currentUserId = doc.id;

                    document.getElementById('greeting-text').textContent = `Olá, ${userProfile.posto}`;
                    document.getElementById('greeting-name').textContent = userProfile.nome_guerra;
                    document.getElementById('user-role-display').textContent = `${userProfile.posto} ${userProfile.nome_guerra} (${currentRole})`;
                    document.getElementById('current-date').textContent = new Date().toLocaleDateString('pt-BR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
                    
                    controlarVisibilidade(currentRole);
                    hideLoading();
                })
                .catch(e => {
                    console.error("Erro ao carregar perfil:", e);
                    alert("Erro ao carregar perfil. Tentando sair...");
                    auth.signOut();
                });
        }

        auth.onAuthStateChanged(user => {
            if (user) {
                showLoading();
                loadUserProfile(user);
            } else {
                window.location.href = "index.html";
            }
        });


        // ====================================================================================================================
        // MÓDULO OPERACIONAL
        // ====================================================================================================================
        function initOperacional() {
            loadSelectsOperacional();
            carregarConferenciasHoje();
            checkRascunho(); 
        }

        async function loadSelectsOperacional() {
            try {
                const rotasDoc = await db.collection(COLECAO_CONFIG).doc('rotas').get();
                const rotas = rotasDoc.data() || {};
                
                LISTAS_LOCAIS = Object.entries(rotas)
                    .filter(([id, info]) => info.unidade === userProfile.unidade && info.ativo !== false)
                    .map(([id, info]) => ({ id, nome: info.nome, posto: info.posto }));

                const selectSetor = document.getElementById('select-setor');
                selectSetor.innerHTML = '<option value="" disabled selected>Escolha o Setor / Posto</option>';
                
                const setoresSet = new Set(LISTAS_LOCAIS.map(l => l.posto));
                
                Array.from(setoresSet).sort().forEach(setor => {
                     selectSetor.innerHTML += `<option value="${setor}">${setor}</option>`;
                });
                selectSetor.disabled = false;

            } catch(e) {
                console.error("Erro ao carregar selects operacionais:", e);
            }
        }

        function filtrarListas() {
            const setor = document.getElementById('select-setor').value;
            const selectLista = document.getElementById('select-lista');
            selectLista.innerHTML = '<option value="" disabled selected>Escolha a Viatura / Lista</option>';
            
            const listasFiltradas = LISTAS_LOCAIS.filter(lista => lista.posto === setor);

            listasFiltradas.sort((a,b) => a.nome.localeCompare(b.nome));

            listasFiltradas.forEach(lista => {
                selectLista.innerHTML += `<option value="${lista.id}">${lista.nome}</option>`;
            });

            selectLista.disabled = listasFiltradas.length === 0;
            if (listasFiltradas.length > 0) selectLista.focus();
        }

        function iniciarConferencia() {
            const listaSelect = document.getElementById('select-lista');
            const listaId = listaSelect.value; 
            const nomeLista = listaSelect.options[listaSelect.selectedIndex]?.text; 

            if (!listaId) return alert("Selecione uma lista primeiro."); 
            
            const url = `conferencia_app.html?id=${listaId}&posto_grad=${encodeURIComponent(userProfile.posto)}&quadro_mil=${encodeURIComponent(userProfile.quadro || 'N/D')}&nome_guerra=${encodeURIComponent(userProfile.nome_guerra)}`;

            localStorage.setItem('sigma_active_conf', JSON.stringify({ 
                id: listaId, nomeLista: nomeLista, user: userProfile.nome_guerra, url: url 
            })); 
            
            const iframe = document.getElementById('app-iframe');
            const container = document.getElementById('app-runner-container');
            iframe.src = url; 
            container.style.display = 'block'; 
        }

        function checkRascunho() {
            const rascunho = localStorage.getItem('sigma_active_conf');
            const btn = document.getElementById('btn-retomar-rascunho');
            if (rascunho) {
                const conf = JSON.parse(rascunho);
                btn.style.display = 'block';
                btn.textContent = `Retomar Rascunho: ${conf.nomeLista} (${conf.user})`;
            } else {
                btn.style.display = 'none';
            }
        }
        
        function retomarConferencia() {
            const rascunho = localStorage.getItem('sigma_active_conf');
            if (rascunho) {
                const conf = JSON.parse(rascunho);
                const iframe = document.getElementById('app-iframe');
                const container = document.getElementById('app-runner-container');
                iframe.src = conf.url; 
                container.style.display = 'block'; 
            } else {
                alert("Nenhum rascunho encontrado.");
            }
        }

        async function carregarConferenciasHoje() {
            const list = document.getElementById('history-list-hoje');
            list.innerHTML = '<li style="text-align:center; color:#999; padding:20px;">Buscando...</li>';
            const start = new Date(); start.setHours(0,0,0,0);
            const end = new Date(); end.setHours(23,59,59,999);
            
            try {
                const snap = await db.collection(COLECAO_RESULTADOS)
                    .where('unidade', '==', userProfile.unidade) 
                    .where('timestamp', '>=', start)
                    .where('timestamp', '<=', end)
                    .orderBy('timestamp', 'desc')
                    .get();

                if (snap.empty) {
                    list.innerHTML = '<li style="text-align:center; color:#999; padding:20px;">Nenhuma conferência registrada hoje.</li>';
                    return;
                }

                list.innerHTML = '';
                snap.forEach(doc => {
                    const data = doc.data();
                    const li = document.createElement('li');
                    li.className = 'history-item';
                    li.innerHTML = `
                        <div class="item-info">
                            <strong>${data.local}</strong>
                            <span>${data.conferente} em ${formatFirestoreDate(data.timestamp)}</span>
                        </div>
                        <div class="item-actions">
                            <button class="btn-modern-action btn-pdf" onclick="reimprimirPDF('${doc.id}')"><i class="fas fa-file-pdf"></i></button>
                        </div>
                    `;
                    list.appendChild(li);
                });
            } catch(e) {
                console.error("Erro ao carregar histórico de hoje:", e);
                list.innerHTML = '<li style="text-align:center; color:red; padding:20px;">Erro ao carregar histórico.</li>';
            }
        }

        async function loadMyHistory() {
             // [Lógica completa de loadMyHistory com filtros, deve ser transferida aqui]
             const start = document.getElementById('my-hist-start').value;
             const end = document.getElementById('my-hist-end').value;
             const list = document.getElementById('my-history-list-completo');
             list.innerHTML = '<li style="text-align:center; color:#999; padding:20px;">Buscando histórico...</li>';

             let query = db.collection(COLECAO_RESULTADOS)
                 .where('conferente', '==', userProfile.nome_guerra)
                 .orderBy('timestamp', 'desc');

             if (start) {
                 const startDate = new Date(start);
                 startDate.setHours(0, 0, 0, 0);
                 query = query.where('timestamp', '>=', firebase.firestore.Timestamp.fromDate(startDate));
             }

             if (end) {
                 const endDate = new Date(end);
                 endDate.setHours(23, 59, 59, 999);
                 query = query.where('timestamp', '<=', firebase.firestore.Timestamp.fromDate(endDate));
             }

             try {
                 const snap = await query.get();
                 if (snap.empty) {
                     list.innerHTML = '<li style="text-align:center; color:#999; padding:20px;">Nenhuma conferência encontrada nos filtros.</li>';
                     return;
                 }
                 list.innerHTML = '';
                 snap.forEach(doc => {
                     const data = doc.data();
                     const li = document.createElement('li');
                     li.className = 'history-item';
                     li.innerHTML = `<div class="item-info"><strong>${data.local}</strong><span>${formatFirestoreDate(data.timestamp)}</span></div><div class="item-actions"><button class="btn-modern-action btn-pdf" onclick="reimprimirPDF('${doc.id}')"><i class="fas fa-file-pdf"></i> PDF</button></div>`;
                     list.appendChild(li);
                 });
             } catch (e) {
                 console.error("Erro ao carregar meu histórico:", e);
                 list.innerHTML = '<li style="text-align:center; color:red; padding:20px;">Erro ao carregar histórico. Verifique os filtros.</li>';
             }
        }


